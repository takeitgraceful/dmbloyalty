<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: @user %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :email %>
  <%= f.email_field :email, class: 'form-control' %>

  <%= f.label :password %>
  <%= f.password_field :password, class: 'form-control' %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, class: 'form-control' %>

  <%= f.label :card_number %>
  <%= f.text_field :card_number, class: 'form-control' %>

  <%= f.label :team_name,"Whose side are you on?" %>
  <br>
  <%= label :team_name, 'VICE' %>
  <%= f.radio_button :team_name, value: "VICE" %> <br />
  <%= label :team_name, 'PINNACLE' %>
  <%= f.radio_button :team_name, value: "PINNACLE" %> <br />
  <br>

  <%= f.submit yield(:button_text), class: "btn-lg gold3 white3" %>
<% end %>
