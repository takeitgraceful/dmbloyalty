require 'socket'
require 'rexml/document'
include REXML

server = TCPServer.new 4444



loop do
  Thread.start(server.accept) do |client|
    while line = client.gets
      # open and write to a file with ruby
      open('loyalty.xml', 'a+') { |f|
        f.puts line
      }
    end
  client.close
end
end
